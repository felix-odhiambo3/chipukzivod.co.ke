/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a tiered security model with public read access for some collections and restricted write access based on user roles and ownership.
 *
 * Data Structure:
 * - /events/{eventId}: Stores event details.
 * - /users/{userId}: Stores user profiles.
 * - /roles_admin/{userId}: Indicates admin privileges.
 * - /services/{serviceId}: Stores service details.
 * - /bookings/{bookingId}: Stores service booking inquiries.
 * - /contacts/{contactId}: Stores contact form submissions.
 * - /gallery/{mediaId}: Stores gallery media items.
 * - /gallery/{mediaId}/likes/{likeId}: Stores likes for gallery items.
 * - /gallery/{mediaId}/comments/{commentId}: Stores comments for gallery items.
 * - /users/{userId}/bookmarks/{bookmarkId}: Stores user-specific bookmarks.
 *
 * Key Security Decisions:
 * - Public read access is granted for 'events', 'services', and 'gallery' collections to allow for open browsing.
 * - Write access to 'events', 'services', and 'gallery' is restricted to admins only.
 * - User profiles are readable by the user themselves and by admins.
 * - Bookings and contact inquiries are publicly creatable, but readable and updatable only by admins.
 * - User bookmarks are private and only accessible to the respective user.
 * - Likes are writable by any authenticated user, indicating a simple "like" action.
 * - Comments are writable by any authenticated user and deletable by the comment owner or an admin.
 * - Admin privileges are determined by the presence of a document in the 'roles_admin' collection.
 *
 * Denormalization for Authorization:
 * - Events have a `createdByAdminId` field to track which admin created the event for authorization purposes.
 * - Gallery items have a `createdByAdminId` field to track which admin created the gallery item for authorization purposes.
 *
 * Structural Segregation:
 * - Publicly accessible data (events, services, gallery) is stored in top-level collections for easy access.
 * - Private user data (bookmarks) is stored in user-specific subcollections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to event documents. Published events are publicly readable.
     *              Only admins can create, update, or delete events.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny update: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle Public read access for published events, admin-only write access.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow get: if isOwner(userId) || isAdmin();
     * @allow list: if false;
     * @allow create: if isOwner(userId);
     * @allow update: if isOwner(userId) && resource != null;
     * @allow delete: if false;
     * @deny get: if !isOwner(userId) && !isAdmin();
     * @deny create: if !isOwner(userId);
     * @deny update: if !isOwner(userId);
     * @principle Users can only read and update their own profiles. Admins can read any profile.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && resource != null;
      allow delete: if false;
    }

    /**
     * @description Determines admin privileges based on the existence of a document in this collection.
     * @path /roles_admin/{userId}
     * @allow get: if isAdmin();
     * @allow list: if false;
     * @allow create: if isAdmin();
     * @allow update: if false;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle Only admins can grant or revoke admin privileges.
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if false;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Controls access to service documents. Services are publicly readable, but only admins can manage them.
     * @path /services/{serviceId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny update: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle Public read access, admin-only write access.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Controls access to booking inquiries. Public can create, admins can read/update.
     * @path /bookings/{bookingId}
     * @allow get: if isAdmin();
     * @allow list: if isAdmin();
     * @allow create: if true;
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if false;
     * @deny get: if !isAdmin();
     * @deny list: if !isAdmin();
     * @deny update: if !isAdmin();
     * @principle Public create access, admin-only read and update access.
     */
    match /bookings/{bookingId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin() && resource != null;
      allow delete: if false;
    }

    /**
     * @description Controls access to contact form submissions. Public can create, admins can read/update.
     * @path /contacts/{contactId}
     * @allow get: if isAdmin();
     * @allow list: if isAdmin();
     * @allow create: if true;
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if false;
     * @deny get: if !isAdmin();
     * @deny list: if !isAdmin();
     * @deny update: if !isAdmin();
     * @principle Public create access, admin-only read and update access.
     */
    match /contacts/{contactId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin() && resource != null;
      allow delete: if false;
    }

    /**
     * @description Controls access to gallery media items. Publicly readable, admin-writable.
     * @path /gallery/{mediaId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny update: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle Public read access, admin-only write access.
     */
    match /gallery/{mediaId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Controls access to likes for gallery media items. Writable by authenticated users.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow get: if true;
     * @allow list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @deny create: if !isSignedIn();
     * @principle Authenticated users can like gallery media items.
     */
    match /gallery/{mediaId}/likes/{likeId} {
        allow get: if true;
        allow list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Controls access to comments for gallery media items. Writable by authenticated users, deletable by comment owner or admin.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow get: if true;
     * @allow list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if isCommentOwner(request.auth.uid, resource.data.userId) || isAdmin() && resource != null;
     * @deny create: if !isSignedIn();
     * @deny delete: if !isCommentOwner(request.auth.uid, resource.data.userId) && !isAdmin();
     * @principle Authenticated users can comment on gallery media items. Comment owners and admins can delete comments.
     */
    match /gallery/{mediaId}/comments/{commentId} {
        allow get: if true;
        allow list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if isCommentOwner(request.auth.uid, resource.data.userId) || isAdmin() && resource != null;
    }

    /**
     * @description Controls access to user-specific bookmarks of gallery items. Writable by the user.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow get: if isOwner(userId);
     * @allow list: if isOwner(userId);
     * @allow create: if isOwner(userId);
     * @allow update: if false;
     * @allow delete: if isOwner(userId) && resource != null;
     * @deny get: if !isOwner(userId);
     * @deny list: if !isOwner(userId);
     * @deny create: if !isOwner(userId);
     * @deny delete: if !isOwner(userId);
     * @principle Users can only manage their own bookmarks.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if false;
        allow delete: if isOwner(userId) && resource != null;
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isCommentOwner(userId, commentUserId) {
        return userId == commentUserId;
    }
  }
}