rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows reading published events for everyone, and restricts write access to admins only.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny update: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle Allows public reads for published data and restricts writes to admins.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Allows users to read their own profile data and admins to read all profiles.
     * @path /users/{userId}
     * @allow get: if isOwner(userId) || isAdmin();
     * @allow create: if isOwner(userId);
     * @allow update: if isOwner(userId) && resource != null;
     * @allow delete: if false;
     * @deny get: if !isOwner(userId) && !isAdmin();
     * @deny create: if !isOwner(userId);
     * @deny update: if !isOwner(userId);
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    /**
     * @description Grants admin privileges to a user if a document exists with their ID in this collection.
     * @path /roles_admin/{userId}
     * @allow get: if isAdmin();
     * @allow list: if isAdmin();
     * @allow create: if isAdmin();
     * @allow update: if false;
     * @allow delete: if isAdmin();
     * @deny create: if !isAdmin();
     * @deny update: if true;
     * @deny delete: if !isAdmin();
     * @principle Admin role management.
     */
    match /roles_admin/{userId} {
        allow get, list: if isAdmin();
        allow create: if isAdmin();
        allow update: if false;
        allow delete: if isAdmin();
    }

    /**
     * @description Allows reading services for everyone, and restricts write access to admins only.
     * @path /services/{serviceId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny update: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle Allows public reads for service data and restricts writes to admins.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Allows public to create bookings, and restricts read/write access to admins only.
     * @path /bookings/{bookingId}
     * @allow get, list: if isAdmin();
     * @allow create: if true;
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if false;
     * @deny update: if !isAdmin();
     * @deny delete: if true;
     * @principle Allows public to submit bookings, but restricts modification to admins.
     */
    match /bookings/{bookingId} {
      allow get, list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if false;
    }

    /**
     * @description Allows public to create contact inquiries, and restricts read/write access to admins only.
     * @path /contacts/{contactId}
     * @allow get, list: if isAdmin();
     * @allow create: if true;
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if false;
     * @deny update: if !isAdmin();
     * @deny delete: if true;
     * @principle Allows public to submit contact inquiries, but restricts modification to admins.
     */
    match /contacts/{contactId} {
      allow get, list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if false;
    }

    /**
     * @description Allows reading gallery media for everyone, and restricts write access to admins only.
     * @path /gallery/{mediaId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny update: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle Allows public reads for gallery media and restricts writes to admins.
     */
    match /gallery/{mediaId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();

      /**
       * @description Allows authenticated users to create likes for a gallery item.
       * @path /gallery/{mediaId}/likes/{likeId}
       * @allow get, list: if true;
       * @allow create: if isSignedIn();
       * @allow update: if false;
       * @allow delete: if false;
       * @deny create: if !isSignedIn();
       * @deny update: if true;
       * @deny delete: if true;
       * @principle  Allows any logged in user to like a gallery item.
       */
      match /likes/{likeId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
      }

      /**
       * @description Allows authenticated users to create comments for a gallery item. Allows comment owner or admin to delete.
       * @path /gallery/{mediaId}/comments/{commentId}
       * @allow get, list: if true;
       * @allow create: if isSignedIn();
       * @allow update: if false;
       * @allow delete: if isOwner(resource.data.userId) || isAdmin() && resource != null;
       * @deny create: if !isSignedIn();
       * @deny update: if true;
       * @principle Allows any logged in user to comment and allows owners/admins to delete them.
       */
      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if resource.data.userId == request.auth.uid || isAdmin();
      }
    }

    /**
     * @description Allows a user to create, read, update and delete their own bookmarks.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId);
     * @allow update: if false;
     * @allow delete: if isOwner(userId) && resource != null;
     * @deny create: if !isOwner(userId);
     * @deny update: if true;
     * @deny delete: if !isOwner(userId);
     * @principle  Enforces user-ownership over bookmarks.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
        allow get, list: if isOwner(userId);
        allow create: if request.auth.uid == userId;
        allow update: if false;
        allow delete: if isOwner(userId);
    }

      /**
       * @description Allows authenticated users to create suggestions. Admins can read/update.
       * @path /suggestions/{suggestionId}
       * @allow get, list: if isAdmin();
       * @allow create: if isSignedIn();
       * @allow update: if isAdmin() && resource != null;
       * @allow delete: if false;
       * @deny create: if !isSignedIn();
       * @deny update: if !isAdmin();
       * @deny delete: if true;
       * @principle  Allows any logged in user to make suggestions and only admins to view/update them.
       */
    match /suggestions/{suggestionId} {
        allow get, list: if isAdmin();
        allow create: if isSignedIn();
        allow update: if isAdmin();
        allow delete: if false;
    }

    /**
     * @description Allows resources to be readable by authenticated users and writable by admins.
     * @path /resources/{resourceId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny update: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle  Allows any logged in user to view resources and only admins to create/edit them.
     */
    match /resources/{resourceId} {
        allow get, list: if isSignedIn();
        allow create: if isAdmin();
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }
    
    /**
     * @description Allows reading announcements for everyone, and restricts write access to admins only.
     * @path /announcements/{announcementId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @deny create: if !isAdmin();
     * @deny update: if !isAdmin();
     * @deny delete: if !isAdmin();
     * @principle Allows public reads for announcements and restricts writes to admins.
     */
    match /announcements/{announcementId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isAdmin() {
    return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
  }

  function isExistingOwner(userId) {
    return isOwner(userId) && resource != null;
  }
}