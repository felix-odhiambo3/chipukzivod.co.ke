/**
 * @fileoverview Firestore Security Rules for Chipukizi Hub.
 *
 * Core Philosophy:
 * This ruleset prioritizes secure data access based on user roles (admin/member) and resource ownership.
 * Strict access control is enforced, with flexible data validation during this prototyping phase.
 *
 * Data Structure:
 * - /events/{eventId}: Stores event details, with public read access for published events.
 * - /users/{userId}: Stores user profiles, with read access for the user themselves.
 * - /roles_admin/{userId}: Indicates admin privileges.
 * - /services/{serviceId}: Stores service details, publicly readable.
 * - /bookings/{bookingId}: Stores service booking inquiries, publicly creatable, admin readable/updatable.
 * - /contacts/{contactId}: Stores contact form submissions, publicly creatable, admin readable/updatable.
 * - /gallery/{mediaId}: Stores gallery media items, publicly readable, admin-writable.
 * - /gallery/{mediaId}/likes/{likeId}: Stores likes, writable by authenticated users.
 * - /gallery/{mediaId}/comments/{commentId}: Stores comments, writable by authenticated users, deletable by owner or admin.
 * - /users/{userId}/bookmarks/{bookmarkId}: Stores bookmarks, writable only by the user.
 *
 * Key Security Decisions:
 * - Users cannot list all users.
 * - Ambiguous cases default to the most secure interpretation (e.g., owner-only access).
 *
 * Denormalization for Authorization:
 * - Events have a `createdByAdminId` field to simplify admin-only write rules.
 * - Comments have `userId` to control ownership of comments.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to event documents.
     * @path /events/{eventId}
     * @allow (get, list): Allows anyone to read event details for published events.
     * @allow (create, update, delete): Allows only admins to create, update, or delete events.
     * @deny (create, update, delete): Denies non-admins from creating, updating, or deleting events.
     * @principle Enforces role-based access control, allowing public reads and admin-only writes for events.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (get): Allows a user to read their own profile.
     * @allow (create): Allows a user to create their own profile (self-registration).
     * @allow (update): Allows a user to update their own profile (e.g., display name, photo).
     * @deny (list, delete): Denies listing or deleting user profiles.
     * @deny (create, update): Denies creating/updating other users' profiles.
     * @principle Enforces user-ownership for profile reads and updates, restricting access to a user's own data.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    /**
     * @description Controls access to admin role documents.
     * @path /roles_admin/{userId}
     * @allow get: if isAdmin();
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @allow list: if false;
     * @principle Restricts all access to AdminRole documents.  These documents are managed server-side.
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow list: if false;
    }

    /**
     * @description Controls access to service documents.
     * @path /services/{serviceId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin();
     * @allow delete: if isAdmin();
     * @principle Allows public read access to service details, restricting write access to admins.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to booking inquiry documents.
     * @path /bookings/{bookingId}
     * @allow get, update: if isAdmin();
     * @allow list: if isAdmin();
     * @allow create: if true;
     * @allow delete: if false;
     * @principle Allows public to create booking inquiries, and admins to view and update them.
     */
    match /bookings/{bookingId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if false;
    }

    /**
     * @description Controls access to contact inquiry documents.
     * @path /contacts/{contactId}
     * @allow get, update: if isAdmin();
     * @allow list: if isAdmin();
     * @allow create: if true;
     * @allow delete: if false;
     * @principle Allows public to create contact inquiries, and admins to view and update them.
     */
    match /contacts/{contactId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if false;
    }

    /**
     * @description Controls access to gallery media documents.
     * @path /gallery/{mediaId}
     * @allow get, list: if true;
     * @allow create: if isAdmin();
     * @allow update: if isAdmin();
     * @allow delete: if isAdmin();
     * @principle Allows public read access to gallery media, restricting write access to admins.
     */
    match /gallery/{mediaId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to likes for gallery items.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows authenticated users to create likes; reads are public.
     */
    match /gallery/{mediaId}/likes/{likeId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Controls access to comments for gallery items.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
     * @principle Allows authenticated users to create comments, public read access, and comment owner/admin to delete.
     */
    match /gallery/{mediaId}/comments/{commentId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid || isAdmin();
    }

    /**
     * @description Controls access to user bookmarks.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId);
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows a user to create and read their own bookmarks.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if false;
        allow delete: if false;
    }

    // ---- Helper functions ----

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is an admin.
     * @return {boolean} True if the user is an admin, false otherwise.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Checks if the user is the owner of the resource.
     * @param {string} userId The user ID to check against.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
  }
}