
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // --- PUBLIC-READABLE COLLECTIONS ---
    
    // Events: Anyone can read, only admins can write.
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Services: Anyone can read, only admins can write.
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Announcements: Anyone can read, only admins can write.
    match /announcements/{announcementId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Gallery: Anyone can read, only admins can write.
    match /gallery/{mediaId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Resources: Authenticated users can read, only admins can write.
    match /resources/{resourceId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- USER-SPECIFIC & SECURED COLLECTIONS ---

    // Users: Can create their own user doc. Can only read/update their own doc.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admins can read all user profiles
    match /users/{userId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Bookings: Anyone can create (submit form), only admins can read/update.
    match /bookings/{bookingId} {
      allow create: if true;
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Contacts: Anyone can create (submit form), only admins can read/update.
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Suggestions: Authenticated users can create, only admins can read/update.
    match /suggestions/{suggestionId} {
        allow create: if request.auth != null;
        allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
