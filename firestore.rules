/**
 * @file Firestore Security Rules
 * @core Philosophy:
 * This ruleset implements a role-based access control system where 'admin' users have elevated privileges.
 * Users can only manage their own user profiles. Public read access is granted to published events.
 *
 * @data Structure:
 * - /events/{eventId}: Stores event details.
 * - /users/{userId}: Stores user profiles.
 * - /roles_admin/{userId}: Presence of a document here grants admin privileges to the user.
 *
 * @key Security Decisions:
 * - Public listing of all users is disallowed.
 * - Only admins can create, update, or delete events.
 * - Only an authenticated user can create their own user document.
 *
 * @denormalization for authorization:
 *  - The `createdByAdminId` field in the `/events/{eventId}` collection denormalizes admin ownership, removing the need for complex `get()` operations to determine the creator.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to event documents.
     * @path /events/{eventId}
     * @allow (read) If the event's 'published' field is true.
     * @allow (create, update, delete) If the user has the 'admin' role.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Role-based access control with public read for published events.
     */
    match /events/{eventId} {
      allow get: if resource.data.published == true;
      allow list: if true; // All events, published or not, can be listed.
      allow create: if isAdmin();
      allow update: if isExistingAdminForEvent(resource.data.createdByAdminId);
      allow delete: if isExistingAdminForEvent(resource.data.createdByAdminId);
    }

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (get) If the user is the owner of the profile or an admin.
     * @allow (create) If the user ID in the path matches the authenticated user's ID.
     * @allow (update, delete) If the user is the owner of the profile and the profile exists.
     * @deny (list) Listing all users is not permitted.
     * @principle Enforces user-ownership for profile management.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isNewOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants admin privileges based on the existence of a document in this collection.
     * @path /roles_admin/{userId}
     * @allow (get, list) Only admins can check who has admin roles.
     * @allow (create) Only admins can assign admin roles to other users.
     * @allow (update, delete) Only admins can revoke admin roles.
     * @deny (get, create, update, delete) If the user is not an admin.
     * @principle Role-based access control for managing admin privileges.
     */
    match /roles_admin/{userId} {
      allow get, list: if isAdmin();
      allow create: if isAdmin() && request.resource.data.isAdmin == true;
      allow update: if isAdmin() && resource.data.isAdmin == true;
      allow delete: if isAdmin() && resource.data.isAdmin == true;
    }

    // --- Helper Functions ---

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the resource.
     * @param {string} userId The user ID to compare against the request's auth UID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is creating their own user document.
     * @param {string} userId The user ID from the document path.
     * @return {boolean} True if the user is creating their own document.
     */
    function isNewOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an existing owner of the resource.
     * Used for update and delete operations.
     * @param {string} userId The user ID to compare against the request's auth UID.
     * @return {boolean} True if the user is the existing owner and the resource exists.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user has the 'admin' role.
     * @return {boolean} True if the user has the 'admin' role, false otherwise.
     */
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.isAdmin == true;
    }

      /**
       * @description Checks if the user has the 'admin' role and that they are the admin that created the event.
       * @param {string} adminId The adminId from the document data.
       * @return {boolean} True if the user has the 'admin' role, false otherwise.
       */
    function isExistingAdminForEvent(adminId) {
        return isAdmin() && resource != null && adminId == resource.data.createdByAdminId;
    }
  }
}