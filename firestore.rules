/**
 * @fileoverview Firestore Security Rules for Chipukizi Hub.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by enforcing strict access control based on user roles (admin vs. member) and resource ownership.
 * Data validation is relaxed to enable rapid prototyping.
 *
 * Data Structure:
 * - `/events/{eventId}`:  Events, with public read access for published events and admin-only write access.
 * - `/users/{userId}`: User profiles, readable by the user themselves and admins.
 * - `/roles_admin/{userId}`:  Admin role markers.  The existence of a document here grants admin privileges.
 * - `/services/{serviceId}`: Services offered, publicly readable and admin-writable.
 * - `/bookings/{bookingId}`: Service booking inquiries, publicly creatable and admin-manageable.
 * - `/contacts/{contactId}`: Contact form submissions, publicly creatable and admin-manageable.
 * - `/gallery/{mediaId}`: Gallery media items, publicly readable and admin-writable.
 * - `/gallery/{mediaId}/likes/{likeId}`: Likes for gallery media, writable by authenticated users.
 * - `/gallery/{mediaId}/comments/{commentId}`: Comments on gallery media, writable by authenticated users, deletable by owner or admin.
 * - `/users/{userId}/bookmarks/{bookmarkId}`: User-specific bookmarks of gallery items, writable only by the user.
 *
 * Key Security Decisions:
 * - Public listing of users is explicitly disallowed.
 * - Admin privileges are determined by the existence of a document in the `/roles_admin/{userId}` collection.
 * - Timestamp validation is skipped in favor of rapid iteration.
 * - Data type validation is skipped in favor of rapid iteration.
 *
 * Denormalization for Authorization:
 * - Events contain a `createdByAdminId` field to simplify write access rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is an admin.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Checks if the user is the owner of the resource (userId matches request.auth.uid).
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner of an existing resource.  Used for update/delete operations.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Events: Public read for published events, admin-only write.
     * @path /events/{eventId}
     * @allow (get, list): if true (for published events - not enforced here due to query limitations).
     * @allow (create, update, delete): if isAdmin().
     * @deny (create): if !isAdmin().
     * @principle Public read with admin-only writes, role-based access control.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Users: Users can read their own profile, admins can read any profile. Listing is denied.
     * @path /users/{userId}
     * @allow (get): if isOwner(userId) || isAdmin().
     * @allow (create): if isOwner(userId).
     * @allow (update, delete): if isOwner(userId) && resource != null.
     * @deny (list): Always deny listing users.
     * @principle Ownership-based read access, admin override, self-creation.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Admin Roles: Only admins can create/delete admin roles.
     * @path /roles_admin/{userId}
     * @allow (get): if isAdmin() || isOwner(userId);
     * @allow (create): if isAdmin();
     * @allow (update): if false;
     * @allow (delete): if isAdmin() && resource != null;
     * @deny (list): Always deny listing roles.
     * @principle Role-based access control.
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin() || isOwner(userId);
      allow list: if false;
      allow create: if isAdmin();
      allow update: if false;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Services: Publicly readable, admin-writable.
     * @path /services/{serviceId}
     * @allow (get, list): if true.
     * @allow (create, update, delete): if isAdmin().
     * @deny (create): if !isAdmin().
     * @principle Public read with admin-only writes, role-based access control.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Bookings: Public can create, admins can read/update.
     * @path /bookings/{bookingId}
     * @allow (get, list): if isAdmin().
     * @allow (create): if true;
     * @allow (update): if isAdmin() && resource != null;
     * @allow (delete): if false;
     * @principle Public creation with admin-only management.
     */
    match /bookings/{bookingId} {
      allow get, list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin() && resource != null;
      allow delete: if false;
    }

    /**
     * @description Contact Inquiries: Public can create, admins can read/update.
     * @path /contacts/{contactId}
     * @allow (get, list): if isAdmin().
     * @allow (create): if true;
     * @allow (update): if isAdmin() && resource != null;
     * @allow (delete): if false;
     * @principle Public creation with admin-only management.
     */
    match /contacts/{contactId} {
      allow get, list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin() && resource != null;
      allow delete: if false;
    }

    /**
     * @description Gallery Media: Publicly readable, admin-writable.
     * @path /gallery/{mediaId}
     * @allow (get, list): if true.
     * @allow (create, update, delete): if isAdmin().
     * @principle Public read with admin-only writes.
     */
    match /gallery/{mediaId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Likes for Gallery Items: Writable by authenticated users.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow (get, list): if true; // Public read
     * @allow (create): if isSignedIn();
     * @allow (update, delete): if false; // Not allowed
     * @principle Authenticated users can like gallery items.
     */
    match /gallery/{mediaId}/likes/{likeId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Comments for Gallery Items: Writable by authenticated users, deletable by owner or admin.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow (get, list): if true; // Public read
     * @allow (create): if isSignedIn();
     * @allow (update): if false; // Not allowed
     * @allow (delete): if isSignedIn() && resource.data.userId == request.auth.uid || isAdmin() && resource != null;
     * @principle Authenticated users can comment, owners/admins can delete.
     */
    match /gallery/{mediaId}/comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if isSignedIn() && resource.data.userId == request.auth.uid || isAdmin() && resource != null;
    }

    /**
     * @description User Bookmarks: Writable by the user.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow (get, list): if isOwner(userId);
     * @allow (create): if isOwner(userId);
     * @allow (update, delete): if isExistingOwner(userId);
     * @principle Ownership-based access control.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
    }
  }
}