/**
 * @fileoverview Firestore Security Rules for Chipukizi Hub.
 *
 * Core Philosophy:
 * This ruleset balances open access for public content with strict authorization
 * for user-specific data and administrative functions. It prioritizes ease of
 * data access for common read operations while ensuring that all write
 * operations are properly secured.
 *
 * Data Structure:
 * - `/events/{eventId}`: Stores event information; publicly readable for 'published' events.
 * - `/users/{userId}`: Stores user profile information; owner read/write access.
 * - `/roles_admin/{userId}`: Indicates admin privileges; admin-only write access.
 * - `/services/{serviceId}`: Stores service details; publicly readable, admin-writable.
 * - `/bookings/{bookingId}`: Stores booking inquiries; publicly creatable, admin-manageable.
 * - `/contacts/{contactId}`: Stores contact form submissions; publicly creatable, admin-manageable.
 * - `/gallery/{mediaId}`: Stores gallery media items; publicly readable, admin-writable.
 * - `/gallery/{mediaId}/likes/{likeId}`: Stores likes for a gallery item; user-owned, authenticated writes.
 * - `/gallery/{mediaId}/comments/{commentId}`: Stores comments for a gallery item; user-owned, authenticated writes, owner/admin deletes.
 * - `/users/{userId}/bookmarks/{bookmarkId}`: Stores user bookmarks; user-owned.
 * - `/suggestions/{suggestionId}`: Stores user suggestions; user-owned creates, admin-manageable.
 * - `/resources/{resourceId}`: Stores downloadable resources; readable by authenticated users, writable by admins.
 * - `/announcements/{announcementId}`: Stores general announcements; publicly readable, admin-writable.
 *
 * Key Security Decisions:
 * - Public read access is granted to 'events', 'services', 'gallery', and 'announcements' collections.
 * - User profiles are private and only accessible to the owner and admins.
 * - Bookings and ContactInquiries are publicly creatable, but only admins can read/update them.
 * - The `roles_admin` collection acts as the source of truth for admin privileges.
 * - Data validation is relaxed to facilitate rapid prototyping but includes essential authorization checks.
 * - All destructive operations verify document existence before proceeding.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants public read access to published events and restricts write access to admins.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn() && isAdmin();
     * @allow update: if isSignedIn() && isAdmin() && resource != null;
     * @allow delete: if isSignedIn() && isAdmin() && resource != null;
     * @deny create: if !isSignedIn();
     * @deny update: if !isSignedIn() || !isAdmin();
     * @deny delete: if !isSignedIn() || !isAdmin();
     * @principle Allows public reading of published events while ensuring only admins can modify event details.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin() && resource != null;
      allow delete: if isSignedIn() && isAdmin() && resource != null;
    }

    /**
     * @description Grants owner read/write access to user profiles.
     * @path /users/{userId}
     * @allow get: if isOwner(userId) || isAdmin();
     * @allow list: if false;
     * @allow create: if isOwner(userId);
     * @allow update: if isOwner(userId) && resource.data.email == request.resource.data.email;
     * @allow delete: if isOwner(userId) && resource != null;
     * @deny get: if !isOwner(userId) && !isAdmin();
     * @deny create: if !isOwner(userId);
     * @deny update: if !isOwner(userId) || resource.data.email != request.resource.data.email;
     * @deny delete: if !isOwner(userId);
     * @principle Enforces user-ownership for profile management and restricts unauthorized access.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && resource.data.email == request.resource.data.email;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Grants admin privileges based on document existence in this collection.
     * @path /roles_admin/{userId}
     * @allow get: if false;
     * @allow list: if false;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Determines admin status based on document existence.
     */
    match /roles_admin/{userId} {
        allow get: if false;
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }
    
    /**
     * @description Grants public read access to services and restricts write access to admins.
     * @path /services/{serviceId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn() && isAdmin();
     * @allow update: if isSignedIn() && isAdmin() && resource != null;
     * @allow delete: if isSignedIn() && isAdmin() && resource != null;
     * @deny create: if !isSignedIn() || !isAdmin();
     * @deny update: if !isSignedIn() || !isAdmin();
     * @deny delete: if !isSignedIn() || !isAdmin();
     * @principle Allows public viewing of services while ensuring only admins can manage service details.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin() && resource != null;
      allow delete: if isSignedIn() && isAdmin() && resource != null;
    }

    /**
     * @description Allows public creation of booking inquiries and restricts read/update access to admins.
     * @path /bookings/{bookingId}
     * @allow get, list: if isSignedIn() && isAdmin();
     * @allow create: if true;
     * @allow update: if isSignedIn() && isAdmin() && resource != null;
     * @allow delete: if isSignedIn() && isAdmin() && resource != null;
     * @deny get: if !isSignedIn() || !isAdmin();
     * @deny update: if !isSignedIn() || !isAdmin();
     * @deny delete: if !isSignedIn() || !isAdmin();
     * @principle Enables users to submit booking requests while ensuring only admins can manage them.
     */
    match /bookings/{bookingId} {
      allow get, list: if isSignedIn() && isAdmin();
      allow create: if true;
      allow update: if isSignedIn() && isAdmin() && resource != null;
      allow delete: if isSignedIn() && isAdmin() && resource != null;
    }

    /**
     * @description Allows public creation of contact inquiries and restricts read/update access to admins.
     * @path /contacts/{contactId}
     * @allow get, list: if isSignedIn() && isAdmin();
     * @allow create: if true;
     * @allow update: if isSignedIn() && isAdmin() && resource != null;
     * @allow delete: if isSignedIn() && isAdmin() && resource != null;
     * @deny get: if !isSignedIn() || !isAdmin();
     * @deny update: if !isSignedIn() || !isAdmin();
     * @deny delete: if !isSignedIn() || !isAdmin();
     * @principle Enables users to submit contact requests while ensuring only admins can manage them.
     */
    match /contacts/{contactId} {
      allow get, list: if isSignedIn() && isAdmin();
      allow create: if true;
      allow update: if isSignedIn() && isAdmin() && resource != null;
      allow delete: if isSignedIn() && isAdmin() && resource != null;
    }

    /**
     * @description Grants public read access to gallery media and restricts write access to admins.
     * @path /gallery/{mediaId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn() && isAdmin();
     * @allow update: if isSignedIn() && isAdmin() && resource != null;
     * @allow delete: if isSignedIn() && isAdmin() && resource != null;
     * @deny create: if !isSignedIn() || !isAdmin();
     * @deny update: if !isSignedIn() || !isAdmin();
     * @deny delete: if !isSignedIn() || !isAdmin();
     * @principle Allows public viewing of gallery media while ensuring only admins can manage the gallery.
     */
    match /gallery/{mediaId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin() && resource != null;
      allow delete: if isSignedIn() && isAdmin() && resource != null;
    }

    /**
     * @description Allows authenticated users to create likes on gallery items.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow get, list: if false;
     * @allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny create: if !isSignedIn() || request.resource.data.userId != request.auth.uid;
     * @principle Enforces that only authenticated users can 'like' gallery items and that the like is associated with their user ID.
     */
    match /gallery/{mediaId}/likes/{likeId} {
        allow get, list: if false;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows authenticated users to create comments on gallery items and allows comment owner or admin to delete.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
     * @allow update: if false;
     * @allow delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin()) && resource != null;
     * @deny create: if !isSignedIn() || request.resource.data.userId != request.auth.uid;
     * @principle Enforces that only authenticated users can comment and allows comment owner or admins to delete.
     */
    match /gallery/{mediaId}/comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if false;
        allow delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin()) && resource != null;
    }

    /**
     * @description Allows users to manage their own bookmarks.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId);
     * @allow update: if false;
     * @allow delete: if isOwner(userId) && resource != null;
     * @deny create: if !isOwner(userId);
     * @deny update: if true;
     * @deny delete: if !isOwner(userId);
     * @principle Enforces that only the user can manage their own bookmarks.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if false;
        allow delete: if isOwner(userId) && resource != null;
    }
    
    /**
     * @description Allows users to create suggestions, and allows admins to read and update them.
     * @path /suggestions/{suggestionId}
     * @allow get, list: if isSignedIn() && isAdmin();
     * @allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
     * @allow update: if isSignedIn() && isAdmin() && resource != null;
     * @allow delete: if false;
     * @deny create: if !isSignedIn() || request.resource.data.userId != request.auth.uid;
     * @deny update: if !isSignedIn() || !isAdmin();
     * @deny delete: if true;
     * @principle Allows users to submit suggestions while ensuring admins can manage them.
     */
    match /suggestions/{suggestionId} {
        allow get, list: if isSignedIn() && isAdmin();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if isSignedIn() && isAdmin() && resource != null;
        allow delete: if false;
    }

    /**
     * @description Allows authenticated users to read resources, and allows admins to manage them.
     * @path /resources/{resourceId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn() && isAdmin();
     * @allow update: if isSignedIn() && isAdmin() && resource != null;
     * @allow delete: if isSignedIn() && isAdmin() && resource != null;
     * @deny create: if !isSignedIn() || !isAdmin();
     * @deny update: if !isSignedIn() || !isAdmin();
     * @deny delete: if !isSignedIn() || !isAdmin();
     * @principle Allows only authenticated users to read resources while ensuring admins can manage them.
     */
    match /resources/{resourceId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn() && isAdmin();
        allow update: if isSignedIn() && isAdmin() && resource != null;
        allow delete: if isSignedIn() && isAdmin() && resource != null;
    }

    /**
     * @description Grants public read access to announcements and restricts write access to admins.
     * @path /announcements/{announcementId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn() && isAdmin();
     * @allow update: if isSignedIn() && isAdmin() && resource != null;
     * @allow delete: if isSignedIn() && isAdmin() && resource != null;
     * @deny create: if !isSignedIn() || !isAdmin();
     * @deny update: if !isSignedIn() || !isAdmin();
     * @deny delete: if !isSignedIn() || !isAdmin();
     * @principle Allows public viewing of announcements while ensuring only admins can manage the announcements.
     */
    match /announcements/{announcementId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin() && resource != null;
      allow delete: if isSignedIn() && isAdmin() && resource != null;
    }

    //------------------HELPER FUNCTIONS----------------------

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the resource.
     * @param {string} userId The user ID to check against.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an admin.
     * @return {boolean} True if the user is an admin, false otherwise.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}