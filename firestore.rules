/**
 * @file Firestore Security Rules for Chipukizi Hub.
 *
 * @corePhilosophy This ruleset enforces a role-based access control model with public read access to certain collections and restricted write access based on user authentication and roles.
 *
 * @dataStructure
 *  - /events/{eventId}: Stores event details.
 *  - /users/{userId}: Stores user profiles.
 *  - /roles_admin/{userId}: Indicates admin privileges.
 *  - /services/{serviceId}: Stores details about offered services.
 *  - /bookings/{bookingId}: Stores service booking inquiries.
 *  - /contacts/{contactId}: Stores contact form submissions.
 *  - /gallery/{mediaId}: Stores gallery media items.
 *  - /gallery/{mediaId}/likes/{likeId}: Stores likes for a gallery item.
 *  - /gallery/{mediaId}/comments/{commentId}: Stores comments for a gallery item.
 *  - /users/{userId}/bookmarks/{bookmarkId}: Stores user-specific bookmarks of gallery items.
 *
 * @keySecurityDecisions
 *  - Public read access to 'events', 'services', and 'gallery' collections.
 *  - Admin-only write access to 'events', 'services', and 'gallery' collections.
 *  - User-owned data under '/users/{userId}' and subcollections.
 *  - Bookings and Contacts can be created publicly.
 *  - Listing of user documents is disallowed.
 *
 * @denormalizationForAuthorization
 *  - Events require 'createdByAdminId' to enforce admin-only writes.
 *  - GalleryMedia items require 'createdByAdminId' to enforce admin-only writes.
 *
 * @structuralSegregation
 *  - Events have a 'status' field to differentiate between 'published' and 'draft', but both are stored in the same collection. Consider segregating into separate 'events_published' and 'events_drafts' collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to event documents. Public read for published events, admin-only write.
     * @path /events/{eventId}
     * @allow (get, list) if true;
     * @allow (create, update, delete) if request.auth != null && isAdmin();
     * @deny (create, update, delete) if request.auth == null;
     * @principle Allows public reading of events while restricting modifications to admins.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if request.auth != null && isAdmin();
      allow update: if request.auth != null && isAdmin() && resource != null;
      allow delete: if request.auth != null && isAdmin() && resource != null;
    }

    /**
     * @description Controls access to user profile documents.  Users can only read their own profile. Admins cannot read user profiles.
     * @path /users/{userId}
     * @allow create: if isSignedIn() && isOwner(userId);
     * @allow get: if isSignedIn() && isOwner(userId);
     * @deny list: if true;
     * @deny update, delete: if true;
     * @principle Enforces user-ownership for profile data.
     */
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Determines admin privileges based on the existence of a document.
     * @path /roles_admin/{userId}
     * @allow get: if isSignedIn() && isOwner(userId);
     * @deny list, create, update, delete: if true;
     * @principle Grants admin access based on document existence.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to service documents. Publicly readable, admin-writable.
     * @path /services/{serviceId}
     * @allow get, list: if true;
     * @allow create: if request.auth != null && isAdmin();
     * @allow update: if request.auth != null && isAdmin() && resource != null;
     * @allow delete: if request.auth != null && isAdmin() && resource != null;
     * @deny (create, update, delete) if request.auth == null;
     * @principle Allows public reading of services while restricting modifications to admins.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow create: if request.auth != null && isAdmin();
      allow update: if request.auth != null && isAdmin() && resource != null;
      allow delete: if request.auth != null && isAdmin() && resource != null;
    }

    /**
     * @description Allows public creation of booking inquiries, but restricts reading and updating to admins.
     * @path /bookings/{bookingId}
     * @allow create: if true;
     * @allow get: if request.auth != null && isAdmin();
     * @allow list: if request.auth != null && isAdmin();
     * @allow update: if request.auth != null && isAdmin() && resource != null;
     * @deny delete: if true;
     * @principle Allows anyone to create a booking, but only admins can view and manage them.
     */
    match /bookings/{bookingId} {
      allow create: if true;
      allow get: if request.auth != null && isAdmin();
      allow list: if request.auth != null && isAdmin();
      allow update: if request.auth != null && isAdmin() && resource != null;
      allow delete: if false;
    }

    /**
     * @description Allows public submission of contact form, but restricts reading and updating to admins.
     * @path /contacts/{contactId}
     * @allow create: if true;
     * @allow get: if request.auth != null && isAdmin();
     * @allow list: if request.auth != null && isAdmin();
     * @allow update: if request.auth != null && isAdmin() && resource != null;
     * @deny delete: if true;
     * @principle Allows anyone to submit a contact form, but only admins can view and manage them.
     */
    match /contacts/{contactId} {
      allow create: if true;
      allow get: if request.auth != null && isAdmin();
      allow list: if request.auth != null && isAdmin();
      allow update: if request.auth != null && isAdmin() && resource != null;
      allow delete: if false;
    }

     /**
     * @description Controls access to gallery media items. Publicly readable, admin-writable.
     * @path /gallery/{mediaId}
     * @allow get, list: if true;
     * @allow create: if request.auth != null && isAdmin();
     * @allow update: if request.auth != null && isAdmin() && resource != null;
     * @allow delete: if request.auth != null && isAdmin() && resource != null;
     * @deny (create, update, delete) if request.auth == null;
     * @principle Allows public viewing of gallery media while restricting modifications to admins.
     */
    match /gallery/{mediaId} {
      allow get, list: if true;
      allow create: if request.auth != null && isAdmin();
      allow update: if request.auth != null && isAdmin() && resource != null;
      allow delete: if request.auth != null && isAdmin() && resource != null;
    }

     /**
     * @description Controls access to likes for gallery media items.  Writable by authenticated users.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow create: if isSignedIn();
     * @allow get: if true;
     * @allow list: if true;
     * @allow delete: if isSignedIn();
     * @deny update: if true;
     * @principle Allows authenticated users to like and unlike gallery items.
     */
    match /gallery/{mediaId}/likes/{likeId} {
      allow create: if isSignedIn();
      allow get: if true;
      allow list: if true;
      allow update: if false;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to comments for gallery media items.  Writable by authenticated users, deletable by comment owner or admin.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow create: if isSignedIn();
     * @allow get: if true;
     * @allow list: if true;
     * @allow update: if false;
     * @allow delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin()) && resource != null;
     * @principle Allows authenticated users to comment on gallery items and delete their own comments or allows admin to delete any comment.
     */
    match /gallery/{mediaId}/comments/{commentId} {
      allow create: if isSignedIn();
      allow get: if true;
      allow list: if true;
      allow update: if false;
      allow delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin()) && resource != null;
    }

    /**
     * @description Controls access to user-specific bookmarks of gallery items. Writable by the user.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow create: if isSignedIn() && isOwner(userId);
     * @allow get: if isSignedIn() && isOwner(userId);
     * @allow list: if isSignedIn() && isOwner(userId);
     * @allow update: if false;
     * @allow delete: if isSignedIn() && isOwner(userId) && resource != null;
     * @principle Enforces user-ownership for bookmarks.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow update: if false;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    // -- Helper Functions --

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the resource.
     * @param {string} userId The user ID to compare against the request's auth UID.
     * @return {bool} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an admin.
     * @return {bool} True if the user has admin privileges, false otherwise.
     */
    function isAdmin() {
      return get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}