/**
 * @fileoverview Firestore Security Rules for Chipukizi Hub.
 *
 * Core Philosophy:
 * This ruleset implements a role-based access control system with public read access to published events.
 * User profiles are private, and admin privileges are granted via the `roles_admin` collection.
 *
 * Data Structure:
 * - /events/{eventId}: Stores event details.
 * - /users/{userId}: Stores user profiles.
 * - /roles_admin/{userId}: Presence indicates admin role for a user.
 *
 * Key Security Decisions:
 * - Public read access is granted for published events.
 * - User listing is disallowed.
 * - Only admins can create, update, or delete events.
 * - Users can only read their own profile data.
 *
 * Denormalization for Authorization:
 * - Events have a `createdByAdminId` field to easily check the creating admin's ID.
 * - The existence of a document in `/roles_admin/{userId}` implies admin privileges.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants read access to published events and restricts write access to admins.
     * @path /events/{eventId}
     * @allow (get, list): if true; - Any user can read or list published events.
     * @allow (create, update, delete): if isAdmin(); - Only admins can create, update, or delete events.
     * @deny (create, update, delete): if !isAdmin(); - Non-admins cannot create, update, or delete events.
     * @principle Allows public read access for published events, but restricts write access to admins.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isAdmin() && request.resource.data.createdByAdminId == request.auth.uid;
      allow update: if isAdmin() && resource.data.createdByAdminId == request.resource.data.createdByAdminId && exists(resource);
      allow delete: if isAdmin() && exists(resource);
    }

    /**
     * @description Allows users to read their own profile and admins to read any profile. Disallows listing all users.
     * @path /users/{userId}
     * @allow (get): if isOwner(userId) || isAdmin(); - A user can read their own profile or an admin can read any profile.
     * @allow (create): if isOwner(userId) && request.auth.uid == userId; - A user can create their profile.
     * @allow (update): if isOwner(userId) && request.auth.uid == userId && exists(resource); - A user can update their own profile.
     * @allow (delete): if isOwner(userId) && request.auth.uid == userId && exists(resource); - A user can delete their own profile.
     * @deny (list): if true; Listing all users is not permitted.
     * @principle Enforces user-owned data with admin override for reading.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.auth.uid == userId;
      allow update: if isOwner(userId) && request.auth.uid == userId && exists(resource);
      allow delete: if isOwner(userId) && request.auth.uid == userId && exists(resource);
    }

    /**
     * @description Grants admin privileges based on the existence of a document in this collection.
     * @path /roles_admin/{userId}
     * @allow (get, create, update, delete): if isAdmin(); - Only existing admins can manage admin roles.
     * @allow (list): if false; Listing admin roles is not permitted.
     * @principle  Admin role management is restricted to existing admins.
     */
    match /roles_admin/{userId} {
      allow get, create, update, delete: if isAdmin();
      allow list: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function exists(resource) {
        return resource != null;
    }
  }
}