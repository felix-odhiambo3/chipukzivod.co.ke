/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a role-based access control system with public read access to certain collections.
 *
 * Data Structure:
 * - /events/{eventId}: Stores event details.
 * - /users/{userId}: Stores user profiles.
 * - /roles_admin/{userId}: Grants admin privileges.
 * - /services/{serviceId}: Stores service details.
 * - /bookings/{bookingId}: Stores service booking inquiries.
 * - /contacts/{contactId}: Stores contact form submissions.
 * - /gallery/{mediaId}: Stores gallery media items.
 * - /gallery/{mediaId}/likes/{likeId}: Stores likes for a gallery item.
 * - /gallery/{mediaId}/comments/{commentId}: Stores comments for a gallery item.
 * - /users/{userId}/bookmarks/{bookmarkId}: Stores user-specific bookmarks of gallery items.
 * - /suggestions/{suggestionId}: Stores member suggestions.
 * - /resources/{resourceId}: Stores downloadable resources.
 *
 * Key Security Decisions:
 * - Public read access to 'events', 'services', and 'gallery' collections.
 * - Admin role managed by documents in 'roles_admin' collection.
 * - User-owned data under /users/{userId} and /users/{userId}/bookmarks/{bookmarkId}.
 * - Bookings and contact inquiries can be created by anyone.
 * - Resources are readable by signed-in users only.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows reading events if their status is published. Only admins can create, update, or delete events.
     * @path /events/{eventId}
     * @allow (get, list): if true
     * @allow (create): if isAdmin()
     * @allow (update): if isAdmin() && resource != null
     * @allow (delete): if isAdmin() && resource != null
     * @deny (create): if !isAdmin()
     * @deny (update): if !isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Allows public read of published events, restricts write access to admins.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows a user to read their own profile. Admins can read any profile.  A user can only create their own profile.  Admins can update and delete any profile.
     * @path /users/{userId}
     * @allow (get): if isOwner(userId) || isAdmin()
     * @allow (list): if false;
     * @allow (create): if isOwner(userId)
     * @allow (update): if isOwner(userId) || isAdmin()
     * @allow (delete): if isAdmin() && resource != null
     * @deny (create): if !isOwner(userId)
     * @deny (update): if !isOwner(userId) && !isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Restricts user profile access to the owner and admins.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows admins to be created by writing a document with isAdmin: true at this path.
     * @path /roles_admin/{userId}
     * @allow (get, create, update, delete): if isAdmin();
     * @allow (list): if false;
     * @deny (get, create, update, delete): if !isAdmin()
     * @principle Restricts admin role creation to existing admins.
     */
    match /roles_admin/{userId} {
      allow get, create, update, delete: if isAdmin();
      allow list: if false;
    }

    /**
     * @description Allows public read access to services. Only admins can create, update or delete.
     * @path /services/{serviceId}
     * @allow (get, list): if true;
     * @allow (create): if isAdmin()
     * @allow (update): if isAdmin() && resource != null
     * @allow (delete): if isAdmin() && resource != null
     * @deny (create): if !isAdmin()
     * @deny (update): if !isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Allows public read of services, restricts write access to admins.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows anyone to create a booking. Admins can read and update bookings.
     * @path /bookings/{bookingId}
     * @allow (get, update): if isAdmin()
     * @allow (create): if true;
     * @allow (list): if isAdmin()
     * @allow (delete): if false;
     * @deny (get, update): if !isAdmin()
     * @principle Allows public creation of bookings, restricts read/write access to admins.
     */
    match /bookings/{bookingId} {
      allow get, update: if isAdmin();
      allow create: if true;
      allow list: if isAdmin();
      allow delete: if false;
    }

    /**
     * @description Allows anyone to create a contact inquiry. Admins can read and update inquiries.
     * @path /contacts/{contactId}
     * @allow (get, update): if isAdmin()
     * @allow (create): if true;
     * @allow (list): if isAdmin()
     * @allow (delete): if false;
     * @deny (get, update): if !isAdmin()
     * @principle Allows public creation of contact inquiries, restricts read/write access to admins.
     */
    match /contacts/{contactId} {
      allow get, update: if isAdmin();
      allow create: if true;
      allow list: if isAdmin();
      allow delete: if false;
    }

    /**
     * @description Allows public read access to gallery media. Only admins can create, update, and delete media items.
     * @path /gallery/{mediaId}
     * @allow (get, list): if true;
     * @allow (create): if isAdmin()
     * @allow (update): if isAdmin() && resource != null
     * @allow (delete): if isAdmin() && resource != null
     * @deny (create): if !isAdmin()
     * @deny (update): if !isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Allows public read of gallery media, restricts write access to admins.
     */
    match /gallery/{mediaId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows authenticated users to create likes on gallery items.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow get: if true;
     * @allow list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @deny (create): if !isSignedIn()
     * @principle Restricts like creation to signed-in users.
     */
    match /gallery/{mediaId}/likes/{likeId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows authenticated users to create comments on gallery items.  Allows comment owner or admin to delete.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow (get, list): if true;
     * @allow (create): if isSignedIn()
     * @allow (update): if false;
     * @allow (delete): if isOwner(resource.data.userId) || isAdmin() && resource != null
     * @deny (create): if !isSignedIn()
     * @deny (delete): if !isOwner(resource.data.userId) && !isAdmin()
     * @principle Restricts comment creation to signed-in users, comment deletion to the owner or an admin.
     */
    match /gallery/{mediaId}/comments/{commentId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if isOwner(resource.data.userId) || isAdmin() && resource != null;
    }

    /**
     * @description Allows a user to create bookmarks for gallery items. Only the user can manage their bookmarks.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow (get, list, create, update, delete): if isOwner(userId);
     * @deny (get, list, create, update, delete): if !isOwner(userId)
     * @principle Restricts bookmark management to the bookmark owner.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow get, list, create, update, delete: if isOwner(userId);
    }

    /**
     * @description Allows authenticated users to create suggestions. Admins can read and update suggestions.
     * @path /suggestions/{suggestionId}
     * @allow (get, update, list): if isAdmin();
     * @allow (create): if isSignedIn()
     * @allow (delete): if false;
     * @deny (get, update, list): if !isAdmin()
     * @deny (create): if !isSignedIn()
     * @principle Allows public creation of suggestions, restricts read/write access to admins.
     */
    match /suggestions/{suggestionId} {
      allow get, update, list: if isAdmin();
      allow create: if isSignedIn();
      allow delete: if false;
    }

        /**
     * @description Allows only authenticated users to read resources. Only admins can create, update, and delete resources.
     * @path /resources/{resourceId}
     * @allow (get, list): if isSignedIn();
     * @allow (create): if isAdmin()
     * @allow (update): if isAdmin() && resource != null
     * @allow (delete): if isAdmin() && resource != null
     * @deny (get, list): if !isSignedIn()
     * @deny (create): if !isAdmin()
     * @deny (update): if !isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Restricts resources to signed-in users for reading and restricts write access to admins.
     */
    match /resources/{resourceId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}