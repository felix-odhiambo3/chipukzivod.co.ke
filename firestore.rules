/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a hybrid security model, allowing public read access to some data while restricting write access based on user roles and ownership.
 *
 * Data Structure:
 * - /events/{eventId}: Publicly readable for published events, admin-only writes.
 * - /users/{userId}: User-owned profiles, readable by the owner and admins.
 * - /roles_admin/{userId}: Indicates admin privileges; document existence grants admin rights.
 * - /services/{serviceId}: Publicly readable, admin-only writes.
 * - /bookings/{bookingId}: Public can create, admins can read/update.
 * - /contacts/{contactId}: Public can create, admins can read/update.
 * - /gallery/{mediaId}: Publicly readable, admin-only writes.
 * - /gallery/{mediaId}/likes/{likeId}: User-owned; users can create likes.
 * - /gallery/{mediaId}/comments/{commentId}: User-owned; users can create comments. Owners and admins can delete.
 * - /users/{userId}/bookmarks/{bookmarkId}: User-owned bookmarks.
 * - /suggestions/{suggestionId}: User-created suggestions, admin-managed.
 * - /resources/{resourceId}: Readable by authenticated users, writable by admins.
 * - /announcements/{announcementId}: Publicly readable, admin-only writes.
 *
 * Key Security Decisions:
 * - Public read access is granted to the 'events', 'services', 'gallery', and 'announcements' collections to facilitate open content consumption.
 * - The 'status' field on the 'events' collection is not directly enforced by the rules. Instead, read access is granted and the application handles filtering.
 * - Admin privileges are determined by the existence of a document in the `/roles_admin/{userId}` collection.
 * - Data validation is minimal to allow for rapid prototyping. Only authorization-critical fields are validated.
 * - List operations on user-scoped subcollections (e.g., bookmarks) are allowed for the owner.
 *
 * Denormalization for Authorization:
 * - Admin status is checked by verifying the existence of a document in `/roles_admin/{userId}`, avoiding the need to denormalize roles onto user documents or use complex queries.
 * - The `createdByAdminId` field on writeable documents allows checking ownership without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows read access to events, with write access restricted to admins.
     * @path /events/{eventId}
     * @allow (get, list): if true (all events are publicly readable)
     * @allow (create, update, delete): if isAdmin()
     * @deny (create, update, delete): if !isAdmin()
     * @principle Allows public read access while restricting writes to admins.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Allows users to read their own profile data, and admins to read all profiles.
     * @path /users/{userId}
     * @allow (get): if isOwner(userId) || isAdmin()
     * @allow (list): if false;
     * @allow (create): if isOwner(userId)
     * @allow (update, delete): if isOwner(userId)
     * @deny (get): if !isOwner(userId) && !isAdmin()
     * @deny (create, update, delete): if !isOwner(userId)
     * @principle Enforces user-ownership for profile access and admin override.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    /**
     * @description Defines admin privileges. The existence of this document grants admin rights to the user.
     * @path /roles_admin/{userId}
     * @allow get: if isAdmin();
     * @allow list: if false;
     * @allow create: if isSignedIn();
     * @allow update, delete: if false;
     * @principle Controls admin role assignment.
     */
    match /roles_admin/{userId} {
        allow get: if isAdmin();
        allow list: if false;
        allow create: if isSignedIn();
        allow update, delete: if false;
    }

    /**
     * @description Allows public read access to services, with write access restricted to admins.
     * @path /services/{serviceId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isAdmin()
     * @deny (create, update, delete): if !isAdmin()
     * @principle Allows public read access while restricting writes to admins.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Allows public creation of bookings, with read/update access restricted to admins.
     * @path /bookings/{bookingId}
     * @allow create: if true;
     * @allow get, list, update, delete: if isAdmin()
     * @deny get, list, update, delete: if !isAdmin()
     * @principle Allows public bookings, with admin management.
     */
    match /bookings/{bookingId} {
      allow create: if true;
      allow get, list, update, delete: if isAdmin();
    }

    /**
     * @description Allows public submission of contact inquiries, with read/update access restricted to admins.
     * @path /contacts/{contactId}
     * @allow create: if true;
     * @allow get, list, update, delete: if isAdmin()
     * @deny get, list, update, delete: if !isAdmin()
     * @principle Allows public contact, with admin management.
     */
    match /contacts/{contactId} {
      allow create: if true;
      allow get, list, update, delete: if isAdmin();
    }

    /**
     * @description Allows public read access to gallery media, with write access restricted to admins.
     * @path /gallery/{mediaId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isAdmin()
     * @deny (create, update, delete): if !isAdmin()
     * @principle Allows public media consumption, with admin content management.
     */
    match /gallery/{mediaId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Allows authenticated users to create likes on gallery media.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow create: if isSignedIn();
     * @allow get, list: if true;
     * @allow update, delete: if false;
     * @principle Allows authenticated users to like gallery items.
     */
    match /gallery/{mediaId}/likes/{likeId} {
        allow create: if isSignedIn();
        allow get, list: if true;
        allow update, delete: if false;
    }

    /**
     * @description Allows authenticated users to create comments on gallery media. Owners and admins can delete.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow create: if isSignedIn();
     * @allow get, list: if true;
     * @allow update: if false;
     * @allow delete: if isCommentOwner(request.auth.uid, resource.data.userId) || isAdmin();
     * @principle Allows authenticated users to comment, with owner/admin moderation.
     */
    match /gallery/{mediaId}/comments/{commentId} {
        allow create: if isSignedIn();
        allow get, list: if true;
        allow update: if false;
        allow delete: if isCommentOwner(request.auth.uid, resource.data.userId) || isAdmin();
    }

    /**
     * @description Allows users to manage their own bookmarks.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow get, list: if isOwner(userId);
     * @allow create, update, delete: if isOwner(userId);
     * @principle Enforces user-ownership for bookmarks.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
        allow get, list: if isOwner(userId);
        allow create, update, delete: if isOwner(userId);
    }

    /**
     * @description Allows users to create suggestions, and admins to read and update them.
     * @path /suggestions/{suggestionId}
     * @allow create: if isSignedIn();
     * @allow get, list, update: if isAdmin();
     * @allow delete: if false;
     * @principle Enables user feedback with admin moderation.
     */
    match /suggestions/{suggestionId} {
        allow create: if isSignedIn();
        allow get, list, update: if isAdmin();
        allow delete: if false;
    }

    /**
     * @description Allows authenticated users to read resources, and admins to manage them.
     * @path /resources/{resourceId}
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if isAdmin();
     * @principle Restricts resource access to logged-in users.
     */
    match /resources/{resourceId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }

    /**
     * @description Allows public read access to announcements, with write access restricted to admins.
     * @path /announcements/{announcementId}
     * @allow get, list: if true;
     * @allow create, update, delete: if isAdmin();
     * @principle Allows public announcement viewing with admin control.
     */
    match /announcements/{announcementId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isCommentOwner(userId, commentUserId) {
        return userId == commentUserId;
    }
  }
}