rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to event documents. Published events are publicly readable, while writes are restricted to admins.
     * @path /events/{eventId}
     * @allow (get, list): Any user can read published events.
     * @allow (create, update, delete): Only admins can create, update, or delete events.
     * @deny (create, update, delete): Non-admins cannot create, update, or delete events.
     * @principle Public read access for published events, admin-only write access.
     */
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to user profile documents. Users can read/write their own profiles. Admins can read all profiles.
     * @path /users/{userId}
     * @allow (get): Users can read their own profile, and admins can read any profile.
     * @allow (create, update): Users can create/update their own profile.
     * @deny (create, update): Users cannot create/update other user profiles.
     * @deny (delete): Users can not delete their profiles.
     * @principle User-owned profiles with admin read access.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.auth.uid == userId;
      allow update: if isOwner(userId) && request.auth.uid == userId;
      allow delete: if false;
    }

    /**
     * @description Defines admin roles. The existence of a document at this path grants admin privileges to the user.
     * @path /roles_admin/{userId}
     * @allow (get, list): Only admins can list admin roles.
     * @allow (create): Only admins can create admin roles.
     * @deny (create, delete): Non-admins cannot create or delete admin roles.
     * @principle Admin-controlled role assignment.
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if false;
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to service documents. Publicly readable, admin-writable.
     * @path /services/{serviceId}
     * @allow (get, list): Any user can read service details.
     * @allow (create, update, delete): Only admins can create, update, or delete service details.
     * @deny (create, update, delete): Non-admins cannot create, update, or delete service details.
     * @principle Public read access, admin-only write access.
     */
    match /services/{serviceId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to booking inquiries. Public can create, admins can read/update.
     * @path /bookings/{bookingId}
     * @allow (create): Any user can create a booking inquiry.
     * @allow (get, list, update, delete): Only admins can read, update, or delete booking inquiries.
     * @deny (get, list, update, delete): Non-admins cannot read, update, or delete booking inquiries.
     * @principle Public creation, admin-only management.
     */
    match /bookings/{bookingId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to contact form submissions. Public can create, admins can read/update.
     * @path /contacts/{contactId}
     * @allow (create): Any user can create a contact form submission.
     * @allow (get, list, update, delete): Only admins can read, update, or delete contact form submissions.
     * @deny (get, list, update, delete): Non-admins cannot read, update, or delete contact form submissions.
     * @principle Public creation, admin-only management.
     */
    match /contacts/{contactId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to gallery media items. Publicly readable, admin-writable.
     * @path /gallery/{mediaId}
     * @allow (get, list): Any user can read gallery media items.
     * @allow (create, update, delete): Only admins can create, update, or delete gallery media items.
     * @deny (create, update, delete): Non-admins cannot create, update, or delete gallery media items.
     * @principle Public read access, admin-only write access.
     */
    match /gallery/{mediaId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to likes for gallery media items. Writable by authenticated users.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow (create): Any authenticated user can like a gallery media item.
     * @allow (delete): Only the owner of the like can delete it.
     * @deny (get, list, update): No one can get, list or update likes.
     * @principle User-owned likes.
     */
    match /gallery/{mediaId}/likes/{likeId} {
      allow get: if false;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if request.auth.uid == resource.data.userId;
    }

    /**
     * @description Controls access to comments for gallery media items. Writable by authenticated users, deletable by comment owner or admin.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow (create): Any authenticated user can comment on a gallery media item.
     * @allow (delete): Only the owner of the comment or an admin can delete it.
     * @deny (get, list, update): No one can get, list or update comments.
     * @principle User-owned comments, admin-deletable.
     */
    match /gallery/{mediaId}/comments/{commentId} {
      allow get: if false;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if request.auth.uid == resource.data.userId || isAdmin();
    }

    /**
     * @description Controls access to user-specific bookmarks of gallery items. Writable by the user.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow (get, list, create, delete): Only the owner of the user profile can manage their own bookmarks.
     * @deny (get, list, create, delete): Users cannot manage bookmarks of other users.
     * @principle User-owned bookmarks.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.auth.uid == userId;
      allow update: if false;
      allow delete: if isOwner(userId);
    }

    /**
     * @description Controls access to member suggestions. Writable by authenticated users, readable/updatable by admins.
     * @path /suggestions/{suggestionId}
     * @allow (create): Any authenticated user can create a suggestion.
     * @allow (get, list, update, delete): Only admins can read, update, or delete suggestions.
     * @deny (get, list, update, delete): Non-admins cannot read, update, or delete suggestions.
     * @principle User-created suggestions, admin-managed.
     */
    match /suggestions/{suggestionId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
       /**
        * @description Controls access to downloadable resources. Readable by authenticated users, writable by admins.
        * @path /resources/{resourceId}
        * @allow (get, list): Any authenticated user can read the resources.
        * @allow (create, update, delete): Only admins can create, update, or delete resources.
        * @deny (create, update, delete): Non-admins can not create, update, or delete resources.
        * @principle: Authentication required to view resources, admin control for management.
        */
    match /resources/{resourceId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to general announcements. Publicly readable, admin-writable.
     * @path /announcements/{announcementId}
     * @allow (get, list): Any user can read announcements.
     * @allow (create, update, delete): Only admins can create, update, or delete announcements.
     * @deny (create, update, delete): Non-admins cannot create, update, or delete announcements.
     * @principle Public read access, admin-only write access.
     */
    match /announcements/{announcementId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(docId) {
    return request.auth.uid == docId;
  }

  function isAdmin() {
    return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
  }
}