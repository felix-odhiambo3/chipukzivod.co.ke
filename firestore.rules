/**
 * @file Firestore Security Rules
 * @version 2
 *
 * @description
 * This ruleset enforces a mixed security model, balancing open access for public content with restricted access for user-specific and administrative data.
 *
 * Data Structure:
 * - `/events/{eventId}`: Stores event details, with public read access for published events and admin-only write access.
 * - `/users/{userId}`: Stores user profiles, readable by the user themselves and admins.
 * - `/roles_admin/{userId}`: Presence indicates admin role.
 * - `/services/{serviceId}`: Stores service details, publicly readable and admin-writable.
 * - `/bookings/{bookingId}`: Stores booking inquiries, publicly creatable and admin-manageable.
 * - `/contacts/{contactId}`: Stores contact form submissions, publicly creatable and admin-manageable.
 * - `/gallery/{mediaId}`: Stores gallery media items, publicly readable and admin-writable.
 * - `/gallery/{mediaId}/likes/{likeId}`: Stores likes, writable by authenticated users.
 * - `/gallery/{mediaId}/comments/{commentId}`: Stores comments, writable by authenticated users, deletable by comment owner or admin.
 * - `/users/{userId}/bookmarks/{bookmarkId}`: Stores bookmarks, writable only by the user.
 *
 * Key Security Decisions:
 * - Listing of users is disallowed to prevent data scraping.
 * - Admin privileges are determined by the existence of a document in the `/roles_admin/{userId}` collection.
 * - Draft events are not publicly accessible.
 *
 * Denormalization for Authorization:
 * - Events denormalize `createdByAdminId` to link events to their creating admin for write authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the resource.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an existing owner of the resource.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user has admin privileges based on the existence of a document in `/roles_admin/{userId}`.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Events: Public read for published events, admin-only write.
     * @path /events/{eventId}
     * @allow (get, list): if true (for published events).
     * @allow (create, update, delete): if isAdmin().
     * @deny (create, update, delete): if !isAdmin().
     * @principle Public read, admin-controlled writes.
     */
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin() && request.resource.data.createdByAdminId == request.auth.uid;
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Users: User-owned read, admin-read, no public listing.
     * @path /users/{userId}
     * @allow get: if isOwner(userId) || isAdmin();
     * @allow create: if isOwner(userId);
     * @deny list: if true;
     * @deny update, delete: if !isOwner(userId) && !isAdmin();
     * @principle User-owned data with admin oversight.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) && resource != null) || (isAdmin() && resource != null);
      allow delete: if isExistingOwner(userId) || (isAdmin() && resource != null);
    }

    /**
     * @description Admin Roles: Only admins can create admin roles. Other operation are denied.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Services: Public read, admin-only write.
     * @path /services/{serviceId}
     * @allow get, list: if true.
     * @allow create, update, delete: if isAdmin().
     * @deny create, update, delete: if !isAdmin().
     * @principle Public visibility, admin control.
     */
    match /services/{serviceId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Bookings: Public create, admin-only read/update/delete.
     * @path /bookings/{bookingId}
     * @allow create: if true.
     * @allow get, list, update, delete: if isAdmin().
     * @deny get, list, update, delete: if !isAdmin().
     * @principle Public submissions, admin management.
     */
    match /bookings/{bookingId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Contact Inquiries: Public create, admin-only read/update/delete.
     * @path /contacts/{contactId}
     * @allow create: if true.
     * @allow get, list, update, delete: if isAdmin().
     * @deny get, list, update, delete: if !isAdmin().
     * @principle Public submissions, admin management.
     */
    match /contacts/{contactId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Gallery Media: Public read, admin-only write.
     * @path /gallery/{mediaId}
     * @allow get, list: if true.
     * @allow create, update, delete: if isAdmin().
     * @deny create, update, delete: if !isAdmin().
     * @principle Public visibility, admin control.
     */
    match /gallery/{mediaId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin() && request.resource.data.createdByAdminId == request.auth.uid;
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Likes: Public read, user-owned write.
     * @path /gallery/{mediaId}/likes/{likeId}
     * @allow get, list: if true.
     * @allow create, update, delete: if isSignedIn();
     * @deny create, update, delete: if !isSignedIn().
     * @principle Public read, signed in users only can like
     */
    match /gallery/{mediaId}/likes/{likeId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Comments: Public read, user-owned write/delete, admin-delete.
     * @path /gallery/{mediaId}/comments/{commentId}
     * @allow get, list: if true.
     * @allow create: if isSignedIn().
     * @allow update: if false; // Not allowed to update comments
     * @allow delete: if isSignedIn() && resource.data.userId == request.auth.uid || isAdmin();
     * @deny create: if !isSignedIn().
     * @deny delete: if !isSignedIn() && !isAdmin();
     * @principle Public read, user-created content, admin moderation.
     */
    match /gallery/{mediaId}/comments/{commentId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if isExistingOwner(resource.data.userId) || (isAdmin() && resource != null);
    }

    /**
     * @description Bookmarks: User-owned read/write.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow get, list, create, update, delete: if isOwner(userId).
     * @deny get, list, create, update, delete: if !isOwner(userId).
     * @principle User-specific data.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && resource != null;
      allow delete: if isExistingOwner(userId);
    }
  }
}