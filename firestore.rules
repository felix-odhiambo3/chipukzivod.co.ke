/**
 * @fileoverview Firestore Security Rules for Chipukizi Hub.
 *
 * Core Philosophy:
 * This ruleset implements a hybrid security model, balancing public readability with role-based and ownership-based write access.
 *
 * Data Structure:
 * - Top-level collections: /events, /services, /bookings, /contacts, /gallery, /suggestions, /resources, /announcements, and /notifications.
 * - User-scoped collections: /users/{userId}/bookmarks/{bookmarkId}.
 * - Admin Roles: Determined by the existence of a document in /roles_admin/{userId}.
 *
 * Key Security Decisions:
 * - Events: Publicly readable for published events; admins can manage all events.
 * - Users: Users can only read their own profiles; admins can read all profiles.
 * - Admin Roles: Only admins can create/update/delete documents in /roles_admin.
 * - Services, Gallery, Announcements: Publicly readable; only admins can create/update/delete.
 * - Bookings, Contacts: Public can create; only admins can read/update/delete.
 * - Likes, Comments: Users can create likes/comments in the gallery. Comment owners or admins can delete.
 * - Bookmarks: Users can only manage their own bookmarks.
 * - Suggestions: Users can create suggestions; admins can read/update/delete.
 * - Resources: Readable by authenticated users, writable by admins.
 * - Notifications: Readable by authenticated users, writable by admins.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an existing owner of the document.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user has the 'admin' role.
     */
    function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Rules for the /events collection.
     * @path /events/{eventId}
     * @allow (get, list) - Any user can read published events.
     * @allow (create, update, delete) - Only admins can manage events.
     * @deny (create) - Non-admins cannot create events.
     * @principle Enforces role-based access control for event management.
     */
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the /users collection.
     * @path /users/{userId}
     * @allow (get) - Users can read their own profile. Admins can read any profile.
     * @allow (create) - Users can create their own profile.
     * @allow (update) - Users can update their own profile.
     * @deny (create, update, delete) - Non-owners cannot modify user profiles.
     * @principle Enforces user-ownership and role-based access control for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if false;
    }

    /**
     * @description Rules for the /roles_admin collection.
     * @path /roles_admin/{userId}
     * @allow (get) - Only admins can read admin roles.
     * @allow (create, update, delete) - Only admins can manage admin roles.
     * @deny (create, update, delete) - Non-admins cannot modify admin roles.
     * @principle Enforces role-based access control for admin role management.
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the /services collection.
     * @path /services/{serviceId}
     * @allow (get, list) - Any user can read service details.
     * @allow (create, update, delete) - Only admins can manage services.
     * @deny (create, update, delete) - Non-admins cannot modify services.
     * @principle Enforces role-based access control for service management.
     */
    match /services/{serviceId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the /bookings collection.
     * @path /bookings/{bookingId}
     * @allow (create) - Any user can create a booking.
     * @allow (get, list, update, delete) - Only admins can manage bookings.
     * @deny (get, list, update, delete) - Non-admins cannot view or modify bookings.
     * @principle Restricts access to bookings to admins.
     */
    match /bookings/{bookingId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the /contacts collection.
     * @path /contacts/{contactId}
     * @allow (create) - Any user can create a contact inquiry.
     * @allow (get, list, update, delete) - Only admins can manage contact inquiries.
     * @deny (get, list, update, delete) - Non-admins cannot view or modify contact inquiries.
     * @principle Restricts access to contact inquiries to admins.
     */
    match /contacts/{contactId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the /gallery collection.
     * @path /gallery/{mediaId}
     * @allow (get, list) - Any user can read gallery media items.
     * @allow (create, update, delete) - Only admins can manage gallery media items.
     * @deny (create, update, delete) - Non-admins cannot modify gallery media items.
     * @principle Enforces role-based access control for gallery management.
     */
    match /gallery/{mediaId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;

      /**
       * @description Rules for the /gallery/{mediaId}/likes collection.
       * @path /gallery/{mediaId}/likes/{likeId}
       * @allow (create) - Any signed in user can create a like.
       * @allow (get, list) - Any user can read likes
       * @deny (update, delete) - Only creator can delete
       */
      match /likes/{likeId} {
        allow get: if true;
        allow list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
      }

      /**
       * @description Rules for the /gallery/{mediaId}/comments collection.
       * @path /gallery/{mediaId}/comments/{commentId}
       * @allow (create) - Any signed in user can create a comment.
       * @allow (get, list) - Any user can read comments
       * @allow (delete) - Comment owner or admin can delete the comment.
       */
      match /comments/{commentId} {
        allow get: if true;
        allow list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if (isSignedIn() && resource.data.userId == request.auth.uid) || isAdmin();
      }
    }

    /**
     * @description Rules for the /users/{userId}/bookmarks collection.
     * @path /users/{userId}/bookmarks/{bookmarkId}
     * @allow (create, get, list, update, delete) - Only the owner can manage their bookmarks.
     * @deny (create, get, list, update, delete) - Non-owners cannot manage bookmarks.
     * @principle Enforces user-ownership for bookmark management.
     */
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /suggestions collection.
     * @path /suggestions/{suggestionId}
     * @allow (create) - Any signed-in user can create a suggestion.
     * @allow (get, list, update) - Only admins can read, list, and update suggestions.
     *  @allow (delete) - Only admins can delete suggestions.
     * @deny (get, list, update, delete) - Non-admins cannot manage suggestions.
     * @principle Restricts access to suggestions to admins, except for creation.
     */
    match /suggestions/{suggestionId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the /resources collection.
     * @path /resources/{resourceId}
     * @allow (get, list) - Any signed-in user can read resources.
     * @allow (create, update, delete) - Only admins can manage resources.
     * @deny (get, list) - Non-signed in users cannot read resources.
     * @principle Restricts access to resources based on sign-in status and role.
     */
    match /resources/{resourceId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the /announcements collection.
     * @path /announcements/{announcementId}
     * @allow (get, list) - Any user can read announcements.
     * @allow (create, update, delete) - Only admins can manage announcements.
     * @deny (create, update, delete) - Non-admins cannot modify announcements.
     * @principle Enforces role-based access control for announcement management.
     */
    match /announcements/{announcementId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the /notifications collection.
     * @path /notifications/{notificationId}
     * @allow (get, list) - Any signed-in user can read notifications.
     * @allow (create, update, delete) - Only admins can manage notifications.
     * @deny (get, list) - Non-signed in users cannot read notifications.
     * @principle Restricts access to notifications based on sign-in status and role.
     */
    match /notifications/{notificationId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }
  }
}