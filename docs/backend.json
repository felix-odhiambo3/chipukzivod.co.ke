{
  "entities": {
    "Event": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Event",
      "type": "object",
      "description": "Represents an event in the Chipukizi Hub system.",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the event."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the event."
        },
        "startDatetime": {
          "type": "string",
          "description": "The date and time when the event starts, in ISO 8601 format.",
          "format": "date-time"
        },
        "endDatetime": {
          "type": "string",
          "description": "The date and time when the event ends, in ISO 8601 format.",
          "format": "date-time"
        },
        "timezone": {
          "type": "string",
          "description": "The timezone in which the event takes place (e.g., 'Africa/Nairobi')."
        },
        "eventType": {
          "type": "string",
          "description": "The type or category of the event (e.g., 'Workshop', 'Meeting')."
        },
        "location": {
          "type": "string",
          "description": "The physical location or online URL for the event."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of an image or poster for the event.",
          "format": "uri"
        },
        "organizer": {
          "type": "string",
          "description": "The name of the organizer or host of the event."
        },
        "status": {
          "type": "string",
          "description": "The visibility status of the event.",
          "enum": ["published", "draft"],
          "default": "draft"
        },
        "createdByAdminId": {
          "type": "string",
          "description": "The ID of the admin user who created the event. Foreign key to a User document."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "description",
        "startDatetime",
        "endDatetime",
        "timezone",
        "eventType",
        "organizer",
        "status",
        "createdByAdminId"
      ]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the Chipukizi Hub system.",
      "properties": {
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The display name of the user."
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile picture.",
          "format": "uri"
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": ["admin", "member"]
        }
      },
      "required": [
        "email",
        "role"
      ]
    },
    "AdminRole": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AdminRole",
      "type": "object",
      "description": "A document indicating a user has admin privileges. The existence of a document at /roles_admin/{uid} grants admin rights.",
      "properties": {
        "isAdmin": {
          "type": "boolean",
          "const": true
        }
      },
      "required": ["isAdmin"]
    },
    "Service": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Service",
      "description": "Represents a service offered by Chipukizi VOD.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the service."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the service."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL for a representative image of the service.",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["title", "description"]
    },
    "Booking": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Booking",
      "description": "Represents a booking inquiry for a service.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "serviceId": {
          "type": "string"
        },
        "serviceTitle": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "contacted"],
          "default": "pending"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["name", "email", "serviceId", "serviceTitle", "message", "status"]
    },
    "ContactInquiry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Contact Inquiry",
      "description": "Represents a submission from the contact form.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "organization": { "type": "string" },
        "service": { "type": "string" },
        "message": { "type": "string" },
        "contactMethod": { "type": "string" },
        "preferredTime": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "responded"], "default": "pending" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "email", "service", "message", "status"]
    },
    "GalleryMedia": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Gallery Media",
      "description": "Represents a media item in the gallery.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "caption": { "type": "string" },
        "type": { "type": "string", "enum": ["image", "video", "youtube"] },
        "url": { "type": "string", "format": "uri" },
        "viewCount": { "type": "number", "default": 0 },
        "createdByAdminId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "type", "url", "createdByAdminId"]
    },
    "Like": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Like",
        "description": "Represents a user's like on a gallery item.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "createdAt"]
    },
    "Comment": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Comment",
        "description": "Represents a user's comment on a gallery item.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "userName": { "type": "string" },
            "userPhotoURL": { "type": "string", "format": "uri" },
            "text": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "userName", "text", "createdAt"]
    },
    "Bookmark": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Bookmark",
        "description": "Represents a user's bookmark of a gallery item.",
        "type": "object",
        "properties": {
            "mediaId": { "type": "string" },
            "mediaTitle": { "type": "string" },
            "mediaType": { "type": "string" },
            "mediaUrl": { "type": "string", "format": "uri" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["mediaId", "mediaTitle", "mediaType", "mediaUrl", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/events/{eventId}",
        "definition": {
          "entityName": "Event",
          "schema": {
            "$ref": "#/entities/Event"
          },
          "description": "Stores event details. Public read access is granted for published events. Write access is restricted to admins."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profiles. Users can read their own profile, and admins can read any profile."
        }
      },
      {
        "path": "/roles_admin/{userId}",
        "definition": {
          "entityName": "AdminRole",
          "schema": {
            "$ref": "#/entities/AdminRole"
          },
          "description": "Grants admin privileges. The existence of a document here makes a user an admin."
        }
      },
      {
        "path": "/services/{serviceId}",
        "definition": {
          "entityName": "Service",
          "schema": {
            "$ref": "#/entities/Service"
          },
          "description": "Stores details about services offered. Publicly readable, admin writable."
        }
      },
      {
        "path": "/bookings/{bookingId}",
        "definition": {
          "entityName": "Booking",
          "schema": {
            "$ref": "#/entities/Booking"
          },
          "description": "Stores service booking inquiries. Public can create, admins can read/update."
        }
      },
      {
        "path": "/contacts/{contactId}",
        "definition": {
          "entityName": "ContactInquiry",
          "schema": {
            "$ref": "#/entities/ContactInquiry"
          },
          "description": "Stores contact form submissions. Public can create, admins can read/update."
        }
      },
      {
        "path": "/gallery/{mediaId}",
        "definition": {
          "entityName": "GalleryMedia",
          "schema": { "$ref": "#/entities/GalleryMedia" },
          "description": "Stores gallery media items. Publicly readable, admin-writable."
        }
      },
      {
          "path": "/gallery/{mediaId}/likes/{likeId}",
          "definition": {
              "entityName": "Like",
              "schema": { "$ref": "#/entities/Like" },
              "description": "Stores likes for a gallery item. Writable by authenticated users."
          }
      },
      {
          "path": "/gallery/{mediaId}/comments/{commentId}",
          "definition": {
              "entityName": "Comment",
              "schema": { "$ref": "#/entities/Comment" },
              "description": "Stores comments for a gallery item. Writable by authenticated users, deletable by comment owner or admin."
          }
      },
      {
          "path": "/users/{userId}/bookmarks/{bookmarkId}",
          "definition": {
              "entityName": "Bookmark",
              "schema": { "$ref": "#/entities/Bookmark" },
              "description": "Stores user-specific bookmarks of gallery items. Writable by the user."
          }
      }
    ]
  }
}
